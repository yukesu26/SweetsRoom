<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ルセット編集
      </h1>
    </div>
  </div>
</section>

<% if @recette.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@recette.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @recette.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @recette do |f| %>
          <div class="field">
            <%= f.label :title, "料理名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :memo, "作り方", class: "label" %>
            <%= f.text_area :memo, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-danger is-outlined" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
