<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ルセット詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @recette, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @recette.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>作り方</th>
                </tr>
                <tr>
                  <td><%= simple_format @recette.memo %></td>
                </tr>
              </table>
              <% if @recette.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_recette_path(@recette), class: "button is-danger is-outlined" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
             <%= @recette.user.user_name %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @recette.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@recette.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @recette.user.user_name %> さんのページへ
            <% end %>      
        </article>
      </div>
    </div>
  </div>
</section>